# vim: set filetype=sh :

alias drillLocal='/home/patrick/dev/software/apache-drill-1.8.0/bin/drill-embedded'

alias switchClusterToTelevisa='export TVMETRIX_CFG=tvmetrix-televisa; cd $METRIX_HOME/tvmetrix-k8s/; ./tvmetrix; cd -'
alias switchClusterToWorkbench='export TVMETRIX_CFG=tvmetrix-workbench; cd $METRIX_HOME/tvmetrix-k8s/; ./tvmetrix; cd -'
alias switchClusterToIzzi='export TVMETRIX_CFG=tvmetrix-izzi; cd $METRIX_HOME/tvmetrix-k8s/; ./tvmetrix; cd -'
alias whichCluster='echo $TVMETRIX_CFG'

alias getDrillRunningQueries='which jq; curl -s  "http://localhost:8047/profiles.json" | jq "[.runningQueries]"'

alias tmux-tvmetrix-sql='~/Configs/tmux/sessions/tmux-sessions.sh tvmetrix-sql '

alias drill-kubectl-logs='kubectl logs --tail=100 -f drill-alluxio-0 -c drill | tee drill-alluxio-0.log'
alias drill-kubectl-logs-1='kubectl logs --tail=100 -f drill-alluxio-1 -c drill | tee drill-alluxio-0.log'
