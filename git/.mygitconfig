[github]
	user = patsancu

[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = /Users/patrick/Configs/git/.gitignore_global

[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    pager = sed 's/\t/|/g' | less -R
    pager = sed 's/ $/Â·/g' | less -R

[alias]
	lol = log --graph --decorate --pretty=oneline --abbrev-commit --all
