[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = /Users/patrick/configs/git/.gitignore_global

[color]
    ui = true

[rebase]
	autosquash = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    pager = sed 's/\t/|/g' | less -R
    pager = sed 's/ $/Â·/g' | less -R

[alias]
    lol = log --graph --decorate --pretty=oneline --abbrev-commit --all
    last = log -1 --stat
    cp = cherry-pick
    co = checkout
    cl = clone
    ci = commit
    st = status -sb
    br = branch
    unstage = reset HEAD --
    dc = diff --cached
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
    alias = "!git config -l | grep alias | cut -c 7-"
    merged-branches = "!git branch --merged master --no-color --no-abbrev | tr -d ' ' | grep -v -- '->' | grep -v 'master' | grep -v 'prod' | grep -v 'staging'"
    current-branch = symbolic-ref --short HEAD
    blist = branch --list
    # just updates the date of the last commit and adds staged files (if any) to the last commit
    amend = commit --amend --no-edit --date=\"Thu Nov  5 17:34:21 CET 2020\"
